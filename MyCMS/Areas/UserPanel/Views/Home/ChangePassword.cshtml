@using MyCMS.Models.ViewModels
@model ChangePasswordViewModel

@{
    ViewBag.Title = "تغییر رمز عبور";
}

<form method="post">
    <div class="form-group">
        <label for="exampleInputEmail1">کلمه عبور فعلی</label>
        <input asp-for="OldPassword" class="form-control" placeholder="کلمه عبور فعلی را وارد کنید">
    </div>
    <div class="form-group">
        <label for="exampleInputEmail1">کلمه عبور جدید</label>
        <input asp-for="Password" class="form-control" placeholder="کلمه عبور جدید را وارد کنید">
    </div>
    <div class="form-group">
        <label for="exampleInputEmail1"> تکرار کلمه عبور جدید</label>
        <input asp-for="RePassword" class="form-control" placeholder=" تکرار کلمه عبور جدید را وارد کنید">
    </div>
    <button type="submit" class="btn btn-success">تغیرر کلمه عبور</button>
    <div asp-validation-summary="All" class="text-danger"></div>
</form>

@section Scripts
{
    <partial name="_ValidationScriptsPartial" />
}