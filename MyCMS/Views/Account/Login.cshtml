@model LoginViewModel
@{
    ViewBag.Title = "ورود به سایت";
}

<h2>ورود به سایت</h2>
<hr />
<form method="post">
    <div class="form-group">
        <label for="exampleInputEmail1">نام کاربری یا ایمیل</label>
        <input asp-for="EmailOrUserName" class="form-control" placeholder="نام کاربری یا ایمیل را وارد کنید">
    </div>    
    <div class="form-group">
        <label for="exampleInputEmail1">کلمه عبور</label>
        <input asp-for="Password" class="form-control" placeholder="کلمه عبور را وارد کنید">
    </div>
    <div class="form-check">        
        <input type="checkbox" asp-for="RememberMe" class="form-check-input" id="remeberme">
        <label class="form-check-label" for="remeberme">مرا به خاطر بسپار</label>
    </div>
    <button type="submit" class="btn btn-success">ورو به سایت</button>
    <div asp-validation-summary="All" class="text-danger"></div>
</form>

@section Scripts
{
    <partial name="_ValidationScriptsPartial" />
}

